{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "https://raw.githubusercontent.com/julkhong/FIT3179-Assignment-2/master/owid_covid_data_true.csv"},
    "title":{"text":"Total COVID-19 Deaths of the World","fontSize":24},
    "transform": [
      {
        "filter" : "datum.new_deaths > 0"
      }
    ],
    "vconcat": [{
        "width": 380,
        "height": 140,
        "mark": {
          "type": "area",
          "line": {
            "color": "red"
          },
          "color": {
            "x1": 1,
            "y1": 1,
            "x2": 1,
            "y2": 0,
            "gradient": "linear",
            "stops": [
              {
                "offset": 0,
                "color": "white"
              },
              {
                "offset": 1,
                "color": "red"
              }
            ]
          }
        },
        "encoding": {
            "x": {
                "timeUnit": "yearmonth", "field": "date",
                "scale": {"domain": {"param": "brush"}},
                "title": "Date (Month-year)"
              },
              "y": {
                "aggregate": "sum", "field": "new_deaths",
                "scale": {"domain": [0, 950000]},
                "title": "Total Deaths"
              }
        }
     },{
      "width": 380,
      "height": 60,
      "mark": {
          "type": "area",
          "line": {
            "color": "red"
          },
          "color": {
            "x1": 1,
            "y1": 1,
            "x2": 1,
            "y2": 0,
            "gradient": "linear",
            "stops": [
              {
                "offset": 0,
                "color": "white"
              },
              {
                "offset": 1,
                "color": "red"
              }
            ]
          }
        },
      "params": [{
        "name": "brush",
        "select": {"type": "interval", "encodings": ["x"]}
      }],
      "encoding": {
        "x": {
            "timeUnit": "yearmonth", "field": "date",
            "title": "Date (Month-year)"
          },
          "y": {
            "aggregate": "sum", "field": "new_deaths",
            "scale": {"domain": [0, 950000]},
            "axis": {"tickCount": 3, "grid": false},
            "title": "Total Deaths"
  
          }
      }
      }
    ],
    "config": {
      "axis": {"labelFont": "Trebuchet MS", "titleFont": "Trebuchet MS"},
      "legend": {"labelFont": "Trebuchet MS", "titleFont": "Trebuchet MS"},
      "header": {"labelFont": "Trebuchet MS", "titleFont": "Trebuchet MS"},
      "mark": {"font": "Trebuchet MS"},
      "title": {"font": "Trebuchet MS", "subtitleFont": "Trebuchet MS"}
    }
     }